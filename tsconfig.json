{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "lib",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2023",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": false,
    "resolveJsonModule": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "types": [
      "node"
    ]
  }
}
